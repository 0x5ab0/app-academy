<% cat_title = @cat.sex == "M" ? "Mr." : "Ms." %>
<h1><%= cat_title %> <%= @cat.name %></h1>

<table>
    <tr>
        <td><strong>Birth Date</strong> </td>
        <td>| <%= @cat.birth_date %> </td>
    </tr>
    <tr>
        <td><strong>Age</strong> </td>
        <td>| <%= @cat.age %> old </td>
    </tr>
    <tr>
        <td><strong>Color</strong> </td>
        <td>| <%= @cat.color %> </td>
    </tr>
    <tr>
        <td><strong>Sex</strong> </td>
        <td>| <%= @cat.sex == 'M' ? 'Male' : 'Female' %> </td>
    </tr>
    <% if @cat.description %>
        <td><strong>Description</strong></td>
        <td>| <%= @cat.description %></td>
    <% end %>
</table>
<br>
<a href="<%= edit_cat_url(@cat) %>">Edit <%= @cat.name %></a>

<h2>Rental Requests</h2>
<table>
    <tr>
        <th>Start Date</th>
        <th>| End Date</th>
        <th>| Status</th>
    </tr>
    <% @cat.rental_requests.order('start_date').each do |req| %>
        <%= render 'req_tr', req: req %>
    <% end %>
</table>
<br>

<a href="<%= cats_url %>">Back</a>

<h1>Create Rental Request</h1>

<form action=<%= cat_rental_requests_url %> method="post">
    <br>

    <label for="cat_rental_request_cat_id">
    <select id="cat_rental_request_cat_id" name="cat_rental_request[cat_id]">
        <option disabled>-- Select a cat --</option>
        <% Cat.all.each do |cat| %>
            <% selected = @rental_request.cat_id == cat.id %>
            <option <%= selected ? "selected" : "" %> value=<%= "#{cat.id}" %>>
                <%= cat.name %>
            </option>
        <% end %>
    </select>
    <br>
    <br>

    <label for="cat_rental_request_start_date">Start date</label><br>
    <input
        id="cat_rental_request_start_date"
        type="date"
        name=cat_rental_request[start_date]
        value="<%= @rental_request.start_date %>">
    <br>
    <br>

        <label for="cat_rental_request_end_date">End date</label><br>
    <input
        id="cat_rental_request_end_date"
        type="date"
        name=cat_rental_request[end_date]
        value="<%= @rental_request.end_date %>">
    <br>
    <br>

    <input type="submit" value="Submit">
</form>